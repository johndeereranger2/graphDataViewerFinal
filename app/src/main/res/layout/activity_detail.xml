<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/septButton"
    android:background="@color/grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataRecyclerActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:id="@+id/top1"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/grey"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/lay1"
                android:background="@drawable/bg_rect_select"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="ALL"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/lay2"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Sept"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/lay3"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Oct"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/lay4"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Nov"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/lay5"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Dec"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:elevation="1dp"
                android:id="@+id/lay6"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Fall"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:id="@+id/top2"
        android:layout_below="@id/top1"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/grey"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/layall"
                android:background="@drawable/bg_rect_select"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="ALL"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/laydaylight"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Daylight"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/layNight"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Night"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:id="@+id/top3"
        android:layout_below="@id/top2"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/grey"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/layall2"
                android:background="@drawable/bg_rect_select"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="ALL"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/layAM"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="AM"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/layPM"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="PM"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:id="@+id/top4"
        android:layout_below="@id/top3"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/grey"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/layall3"
                android:background="@drawable/bg_rect_select"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="ALL"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/layqtr1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="1 QTR"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/layQTR2"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="2 QTR"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/layqtr3"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="3 QTR"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/layqtr4"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="4 QTR"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_below="@+id/top4"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_below="@+id/moreButton"
            app:cardCornerRadius="5dp"
            android:id="@+id/barview"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/barchart"
                android:background="@color/theme_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <com.razerdp.widget.animatedpieview.AnimatedPieView
            android:id="@+id/piechart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>


</RelativeLayout>